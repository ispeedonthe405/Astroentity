<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:ctls="using:Astroentity.Controls"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
             x:Class="Astroentity.Controls.ViewHeader"
			 x:DataType="ctls:ViewHeader">

	<UserControl.Styles>
		<StyleInclude Source="/Styles/StyleDefaults.axaml" />
	</UserControl.Styles>
	
	<StackPanel Orientation="Horizontal" Spacing="10">
		<Image Source="{Binding BitmapSource}" Width="60" Height="60"/>
		<TextBlock FontSize="18" FontWeight="Bold" Text="{Binding PageTitle}"/>
	</StackPanel>
  
</UserControl>
